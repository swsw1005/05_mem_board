<?xml version="1.0" encoding="UTF-8" ?>
<Context
		docBase="05_mem_board"
		path="/05_mem_board"
		reloadable="true">

	<Resource
			name="jdbc/mysql"
			auth="Container"
			type="javax.sql.DataSource"
			driverClassName="com.mysql.jdbc.Driver"
			url="jdbc:mysql://localhost:3306/ch20?autoReconnect=true"
			connectionProperties="useUnicode=yes;characterEncoding=utf8;"
			username="root"
			password="12345"
			maxWait="5000"
			maxActive="20"
			testOnBorrow="true"
			factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"
			closeMethod="close"></Resource>

	<Resource
			name="jdbc/oracle"
			auth="Container"
			type="javax.sql.DataSource"
			driverClassName="oracle.jdbc.driver.OracleDriver"
			url="jdbc:oracle:thin:@localhost:1521:XE"
			username="scott"
			password="tiger"
			maxWait="5000"
			maxActive="20"
			testOnBorrow="true"
			factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"
			closeMethod="close" />

</Context>